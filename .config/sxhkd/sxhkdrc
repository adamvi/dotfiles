# .config/sxhkd/sxhkdrc by Miika Nissi
# https://github.com/miikanissi
# https://miikanissi.com

### PROGRAM LAUNCHERS ###
super + {Return, Print, w, e, b, s, m}
    {alacritty, flameshot gui, brave-browser, geary, pcmanfm, signal-desktop --start-in-tray --use-tray-icon, alacritty -t ncmpcpp -e ncmpcpp}
# launch rofi
super + d
    rofi -show run
# launch rofi desktop launcher
super + ctrl + d
    rofi -show drun
# launch passmenu
super + shift + d
    ~/.local/bin/rofi_passmenu.sh
# launch rofi kill script
super + x
    ~/.local/bin/rofi_killprocess.sh
# launch rofi_mount.sh
super + z
    ~/.local/bin/rofi_dman.sh

### BSPC HOTKEYS ###
# restart bspwm
super + grave
    bspc wm -r
# close and kill
super {_,shift + } q
    bspc node -{c,k}
# close current window
super + shift + c
    bspc node -c
# state of the window
super + {t,shift + t,shift + f,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# toggle fullscreen
super + Tab
    bspc node -t \~fullscreen
# Shrink/grow window
super + ctrl + {h,j,k,l}
    {bspc node -z right -20 0; \
    bspc node -z left +20 0, \
    bspc node -z top 0 -20; \
    bspc node -z bottom 0 +20, \
    bspc node -z top 0 +20; \
    bspc node -z bottom 0 -20, \
    bspc node -z right +20 0; \
    bspc node -z left -20 0}
# Swap current window with biggest window
super + g
	bspc node -s biggest.window
# focus the node in the given direction, shift swaps nodes
super + {_,shift +}{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}
# focus the node in the given direction, shift swaps nodes
super + {_,shift +}{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}
# focus or send to the given desktop
super + {_,shift +}{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}' --follow
# focus or send to desktop up, down
super + {_,shift +}{Next, Prior}
    bspc {desktop -f,node -d} {prev, next} --follow
